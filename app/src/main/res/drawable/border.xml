<!-- res/drawable/border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- Esto asegura que solo el borde inferior sea visible -->
            <stroke
                android:width="2dp"
            android:color="#000000" />
            <padding
                android:top="0dp"
                android:left="0dp"
                android:right="0dp"
                android:bottom="-2dp" />
        </shape>
    </item>
</layer-list>
